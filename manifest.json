  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+utilitybox",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/?action=import&type=%s",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"],
        "text/markdown": [".md"]
      }
    }
  ],
  "share_target": {
    "action": "/?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["*/*"]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "background-sync",
    "storage"
  ],
  "features": [
    "Cross Platform",
    "Offline Support",
    "Push Notifications",
    "Background Sync",
    "File Handling",
    "Share Target",
    "Shortcuts"
  ],
  "developer": {
    "name": "Utility Box Team",
    "url": "https://utilitybox.cloud"
  },
  "homepage_url": "https://utilitybox.cloud",
  "author": "Utility Box Development Team",
